{% extends 'layout/admin' %}

{% block title %}
	ServerInfo
{% endblock title %}

{% block content %}
	<div class="table-responsive">
		<table class="table table-striped table-bordered  table-hover table-condensed">
			<thead>
			<tr>
				<th>#</th>
				<th>Label</th>
				<th>IconClass</th>
				<th>Memo</th>
				<th>Active</th>
				<th>Sortkey</th>
				<th>Option</th>
			</tr>
			</thead>
			<tbody>
			{% for key, curInfo in serverInfo %}
				<tr>
					<td>{{ curInfo.getId }}</td>
					<td>{{ curInfo.getLabel }}</td>
					<td>{{ curInfo.getIcon }}</td>
					<td>{{ curInfo.getMemo|striptags|slice(0, 200) }}</td>
					<td>{{ curInfo.getActive }}</td>
					<td>{{ curInfo.getSortkey }}</td>
					<td>
						<a href="{{ url('admin_server_info', {'action' : 'detail', 'id' : curInfo.getId }) }}" class="btn btn-warning btn-sm"><i class="fa fa-edit"></i> edit</a>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="clearfix"></div>
	<a href="{{ url('admin_server_info', {'action' : 'new'}) }}" class="btn btn-danger btn-sm"><i class="fa fa-adn"></i> new</a>
{% endblock content %}