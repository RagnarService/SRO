{% extends 'layout/admin' %}

{% block title %}
	News
{% endblock title %}

{% block content %}
	<div class="table-responsive">
		<table class="table table-striped table-bordered  table-hover table-condensed">
			<thead>
			<tr>
				<th>#</th>
				<th>Author</th>
				<th>Title</th>
				<th>Memo</th>
				<th>Active</th>
				<th>Created</th>
				<th>Option</th>
			</tr>
			</thead>
			<tbody>
			{% for key, curNews in news %}
				<tr>
					<td>{{ curNews.getNid }}</td>
					<td>{{ curNews.getUser.getUsername }}</td>
					<td>{{ curNews.getTitle }}</td>
					<td>{{ curNews.getMemo|striptags|slice(0, 200) }}</td>
					<td>{{ curNews.getActive }}</td>
					<td>{{ curNews.getCreated|date('d.m.Y H:i') }}</td>
					<td>
						<a href="{{ url('admin_news', {'action' : 'detail', 'id' : curNews.getNid }) }}" class="btn btn-warning btn-sm"><i class="fa fa-edit"></i> edit</a>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="clearfix"></div>
	<a href="{{ url('admin_news', {'action' : 'new'}) }}" class="btn btn-danger btn-sm"><i class="fa fa-adn"></i> new</a>
{% endblock content %}